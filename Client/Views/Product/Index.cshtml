@model IEnumerable<Client.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">🛍️ Danh sách sản phẩm</h2>
        <div>
            <a asp-action="Create" class="btn btn-success me-2">➕ Thêm mới</a>
            <a asp-action="Index" asp-controller="Cart" class="btn btn-warning text-dark">🛒 Xem giỏ hàng</a>
        </div>
    </div>

    <div class="table-responsive shadow rounded-4">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Price)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.Id</td>
                        <td class="fw-bold">@item.Name</td>
                        <td>@item.Price.ToString("C0")</td>
                        <td class="text-start">@item.Description</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2 flex-wrap">
                                <a asp-action="AddCart" asp-controller="Cart" asp-route-id="@item.Id" class="btn btn-sm btn-primary">🛒 Thêm</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">✏️ Sửa</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">📄 Xem</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">🗑️ Xóa</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
