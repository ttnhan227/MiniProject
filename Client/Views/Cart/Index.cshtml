@model IEnumerable<Client.Models.Cart>

@{
    ViewData["Title"] = "Index";
}

<h1>Your Shopping Cart</h1>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table table-hover table-striped">
        <thead class="thead-light">
            <tr>
                <th>
                    Product
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Price
                </th>
                 <th>
                    Subtotal
                </th>
                <th></th> <!-- Empty header for potential actions -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        Product ID: @Html.DisplayFor(modelItem => item.ProductId) 
                        @* Ideally, fetch and display Product Name/Image here *@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                        @* Add +/- buttons here later if needed *@
                    </td>
                    <td>
                    10
                    </td>
                     <td>
                        @(10 * item.Quantity)
                    </td>
                    <td>
                        @* Add Remove button here later if needed *@
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right"><strong>Total:</strong></td>
                <td><strong>@Model.Sum(item => 10 * item.Quantity)</strong></td>
                <td></td>
            </tr>
        </tfoot>
    </table>

    <div class="text-right mt-3">
        <a asp-action="Payment" class="btn btn-success">Proceed to Payment</a>
    </div>
}
